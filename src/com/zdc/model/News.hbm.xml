<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.zdc.model.News" table="News">
        <id name="id" column="Id">
            <generator class="native"/>
        </id>
        
		<property name="type" column="Type" type="java.lang.String"></property>
    	<property name="head" column="Head" type="java.lang.String"></property>
    <!-- 	<property name="newsType" column="NewsType" type="java.lang.String"></property> -->
    	<property name="content" column="Content" type="java.lang.String"></property>
    	<property name="issueUser" column="IssueUser" type="java.lang.String"></property>
    	<property name="date" column="Date" type="java.lang.String"></property>
    
    </class>
    
</hibernate-mapping>